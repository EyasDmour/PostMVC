@model PostMVC.Models.ProjectTasksViewModel

@{
    ViewData["Title"] = "Project Tasks";
}

<h2>Project @Model.ProjectId Tasks</h2>

@if (Model.Tasks != null && Model.Tasks.Any())
{
    <table class="table table-striped table-bordered mt-3">
        <thead>
            <tr>
                <th>Title</th>
                <th>Details</th>
                <th>Created At</th>
                <th>Completed</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Details</td>
                <td>@task.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(task.IsCompleted ? "Yes" : "No")</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        No tasks found for this project.
    </div>
    <a asp-controller="Tasks" asp-action="Create" asp-route-projectId="@Model.ProjectId" class="btn btn-primary mt-2">
        Create Task
    </a>
}